<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/pics"
    tools:context=".content_writer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName: "
            android:textColor="#00c648"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/userText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="PassWord: "
            android:textColor="#10df40"
            android:textStyle="bold"
            />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/passText"
           />
    </LinearLayout>
    <Button
        android:id="@+id/btn1id"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="#d34b8bec"
        android:text="Sign In"
        android:textColor="#f58e4a"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Sign up here.."
        android:textColor="#9af21e"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/btn2id"
        android:layout_marginTop="20dp"
        android:text="Sign Up here"
        android:background="#d64e7ff4"
        android:textColor="#f58e4a"
        android:textStyle="bold"
        />


</LinearLayout>