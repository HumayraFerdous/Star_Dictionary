<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".buttonActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/mercury"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#4ec41c"
            android:text="Mercury"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/marcury"/>
        <Button
            android:id="@+id/venus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b694c41c"
            android:text="Venus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/venus"/>
        <Button
            android:id="@+id/mars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6c4701c"
            android:text="Mars"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/mars"/>
        <Button
            android:id="@+id/earth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b61cc4b9"
            android:text="Earth"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/earth"/>
        <Button
            android:id="@+id/jupiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6c4511c"
            android:text="Jupiter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/jupiter"/>
        <Button
            android:id="@+id/saturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b66d1cc4"
            android:text="Saturn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/saturn"/>
        <Button
            android:id="@+id/neptune"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b61cb0c4"
            android:text="Neptune"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/neptune"/>
        <Button
            android:id="@+id/moon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6c4221c"
            android:text="Moon"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/moon"/>
        <Button
            android:id="@+id/sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6debf12"
            android:text="Sun"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/sun"/>
        <Button
            android:id="@+id/uranus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b61c73c4"
            android:text="Uranus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/uranus"/>
        <Button
            android:id="@+id/pluto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6c41c54"
            android:text="Pluto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/pluto"/>
        <Button
            android:id="@+id/comet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6c4681c"
            android:text="Comet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/comet"/>
        <Button
            android:id="@+id/blackhole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#b6781cc4"
            android:text="Blackholes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/blackhole"/>



    </LinearLayout>

</ScrollView>